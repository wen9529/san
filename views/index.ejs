<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>锄大地 Online</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <h1>🃏 锄大地游戏大厅</h1>
        <div id="connection-status">连接状态：<span class="disconnected">断开</span></div>
    </header>

    <div class="game-container">
        <div class="card-grid">
            <% cards.forEach(card => { %>
                <div class="card" 
                     data-suit="<%= card.suit %>" 
                     data-rank="<%= card.rank %>"
                     data-image="<%= card.imagePath %>">
                    <img src="<%= card.imagePath %>" 
                         alt="<%= card.toString() %>"
                         onerror="this.src='/images/back.png'">
                    <div class="card-label"><%= card.toString() %></div>
                </div>
            <% }); %>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/socketHandler.js"></script>
    <script src="/js/cardLogic.js"></script>
    <script src="/js/gameInit.js"></script>
</body>
</html>
